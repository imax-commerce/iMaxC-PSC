<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_shadow_end_color"
    android:layout_margin="@dimen/_1sdp"
    app:cardBackgroundColor="#FFF"
    app:cardElevation="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_baseline_phone"
            android:layout_toStartOf="@+id/btn_action_map"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_alignParentTop="true"
            android:id="@+id/btn_action_phone"/>

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/icon_marker"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btn_action_map"/>

        <TextView
            android:id="@+id/text_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_action_phone"
            android:layout_alignBottom="@+id/btn_action_phone"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_action_phone"
            android:layout_marginEnd="@dimen/_10sdp"
            tools:text="Nombre de la agencia"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorBlack"
            android:gravity="start|center_vertical" />
        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            tools:text="DirecciÃ²n"
            android:textColor="@color/colorBlack"
            android:gravity="start"
            android:layout_toStartOf="@id/text_schedule"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_action_phone"/>

        <TextView
            android:id="@+id/text_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_action_phone"
            tools:text="Cierra: 20:00"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>